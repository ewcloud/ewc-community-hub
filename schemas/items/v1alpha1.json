{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/ewcloud/ewc-community-hub/blob/main/schemas/items/v1alpha1.json",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "const": "CommunityHubCatalog"
    },
    "spec": {
      "type": "object",
      "properties": {
        "items": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+(\\d+\\.\\d+\\.\\d+)?$": {
              "$ref": "#/$defs/communityHubCatalogItem"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "items"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "apiVersion",
    "kind",
    "spec"
  ],
  "additionalProperties": false,
  "$defs": {
    "communityHubCatalogItem": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object",
          "properties": {
            "licenseType": {
              "type": "string"
            },
            "category": {
              "type": "string",
              "pattern": ".+"
            },
            "others": {
              "type": "string",
              "pattern": ".+"
            },
            "supportLevel": {
              "type": "string",
              "enum": ["EWC", "Community"]
            },
            "technology": {
              "type": "string",
              "pattern": ".+"
            }
          },
          "required": [
            "licenseType",
            "category",
            "supportLevel",
            "technology"
          ],
          "additionalProperties": false
        },
        "displayName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "values": {
          "type": "object",
          "properties": {
            "defaultImageName": {
              "type": "string"
            },
            "inputSpec": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "description",
                  "type"
                ],
                "additionalProperties": true
              }
            },
            "outputSpec": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "description",
                  "type"
                ],
                "additionalProperties": false
              }
            },
            "pathToRequirementsFile": {
              "type": "string"
            },
            "pathToMainFile": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "ewccli": {
          "type": "object",
          "properties": {
            "defaultSecurityGroups": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "externalIP": {
              "type": "boolean"
            },
            "checkDNS": {
              "type": "boolean"
            }
          },
          "additionalProperties": true
        },
        "home": {
          "type": "string",
          "pattern": "^https://[\\w\\-\\./:#?=&%]+$"
        },
        "license": {
          "type": "string"
        },
        "icon": {
          "type": "string",
          "pattern": "^https://[\\w\\-\\./:#?=&%]+$"
        },
        "maintainers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "anyOf": [
                  {
                    "type": "string",
                    "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$"
                  },
                  {
                    "type": "null"
                  }
                ],
                "default": "null"
              },
              "url": {
                "anyOf": [
                  {
                    "type": "string",
                    "pattern": "^https://[\\w\\-\\./:#?=&%]+$"
                  },
                  {
                    "type": "null"
                  }
                ],
                "default": "null"
              }
            },
            "required": [
              "name"
            ],
            "additionalProperties": false
          }
        },
        "name": {
          "type": "string"
        },
        "published": {
          "type": "boolean"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "summary": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
        }
      },
      "required": [
        "annotations",
        "displayName",
        "description",
        "home",
        "license",
        "icon",
        "maintainers",
        "name",
        "published",
        "sources",
        "summary",
        "version"
      ],
      "additionalProperties": false
    }
  }
}
